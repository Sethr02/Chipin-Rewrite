@model Chipin_Rewrite.Models.Entities.UserTable

@{
    ViewData["Title"] = "Details";
    var userTable = ViewBag.UserTable as List<Chipin_Rewrite.Models.Entities.UserTable>;

}

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css?family=Open+Sans:400,700" rel="stylesheet">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/myprofile.css" rel="stylesheet" media="all">








<link href="~/css/bubbles.css" rel="stylesheet" media="all">
<div class="bubbles bubble-1"></div>
<div class="bubbles bubble-5"></div>
<div class="bubbles bubble-2"></div>
<div class="bubbles bubble-6"></div>
<div class="bubbles bubble-3"></div>
<div class="bubbles bubble-7"></div>
<div class="bubbles bubble-4"></div>
<div class="bubbles bubble-8"></div>
<body>

    <div class="details-card onshadow">
        <h2>@userTable.FirstOrDefault().ChipinName</h2>





        <div>
            EMAIL:
            <label >
                @userTable.FirstOrDefault().UserEmail
            </label>

        </div>

        <div>
            CREATED:
            <label>
                @userTable.FirstOrDefault().ChipinCreatedDate
            </label>

        </div>





    </div>

    <div class="cards">
        <div class="card onshadow">
            <div class="inner-div">
                <i class="fas fa-user fa-2x " aria-hidden="true"></i>
                <label>Edit</label>
            </div>

            <div class="box">

                <div class="details">
                    <a class="subtext" id="Edit2">
                        <label>
                            ➺
                        </label>
                        Personal Details
                    </a>
                   

                </div>
            </div>

        </div>
        <div class="card onshadow">
            <div class="inner-div">
                <i class="fas fa-list fa-2x"></i>
                <label>Lists</label>
            </div>

            <div class="box">

                <div class="details">



                 

                    <a class="subtext" id="Lists2">
                        <label>
                            ➺
                        </label>
                        My Lists
                    </a>

                    <a class="subtext" id="CreateList2">
                        <label>
                            ➺
                        </label>New List
                    </a>


                </div>
            </div>

        </div>
        <div class="card onshadow">
            <div class="inner-div">
                <i class="fas fa-address-card fa-2x"></i>
                <label>Address</label>
            </div>

            <div class="box">

                <div class="details">
                    <a class="subtext" id="Addresses2">
                        <label>
                            ➺
                        </label>Address Book
                    </a>
                    <a class="subtext" id="BillingAddresses2">
                        <label>
                            ➺
                        </label>Billing Address
                    </a>


                </div>
            </div>

        </div>

       <div class="card onshadow">
            <div class="inner-div">
                <i class="fas fa-wallet fa-2x"></i>
                <label>Wallet</label>
            </div>

            <div class="box">

                <div class="details">
                    <a class="subtext" id="Wallet">
                        <label>
                            ➺
                        </label>Wallet
                    </a>
                </div>
            </div>

        </div>

        <div class="card onshadow">
            <div class="inner-div">
                <i class="fas fa-sign-out-alt fa-2x"></i>
                <label>Logout</label>
            </div>

            <div class="box">

                <div class="details">
                    <a class="subtext" id="logoutButton">
                        <label>
                            ➺
                        </label>Logout
                    </a>
                </div>
            </div>

        </div>
    </div>
  




</body>

<script>
    document.getElementById('Edit2').addEventListener('click', function () {
        var token = localStorage.getItem('token');
        var url = '@Url.Action("Edit", "UserTables")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });
    document.getElementById('Lists2').addEventListener('click', function () {
        var token = localStorage.getItem('token');
        var url = '@Url.Action("Index", "ProductListWallets")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });

    document.getElementById('CreateList2').addEventListener('click', function () {
        var token = localStorage.getItem('token');
        var url = '@Url.Action("Create", "ProductListWallets")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });

    document.getElementById('BillingAddresses2').addEventListener('click', function () {
        var token = localStorage.getItem('token');
        var url = '@Url.Action("Index", "BillingAddresses")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });
    document.getElementById('Addresses2').addEventListener('click', function () {
        var token = localStorage.getItem('token');
        var url = '@Url.Action("Index", "Addresses")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });


   // const logoutButton = document.getElementById('logoutButton');
   // logoutButton.addEventListener('click', function () {
     //   localStorage.removeItem('token');
       // var url = '@Url.Action("Index", "Home")';
       // window.location.href = url;
   // });


</script>



