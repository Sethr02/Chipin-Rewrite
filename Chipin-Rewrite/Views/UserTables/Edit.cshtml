@model Chipin_Rewrite.Models.Entities.UserTable

@{
    ViewData["Title"] = "Personal";
}



<!-- Main CSS-->
<link href="~/css/Created.css" rel="stylesheet" media="all">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link rel="stylesheet" href="~/css/mynavbar.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />




@if (User.Identity.IsAuthenticated)
{


    <link href="~/css/bubbles.css" rel="stylesheet" media="all">
    <div class="bubbles bubble-1"></div>
    <div class="bubbles bubble-5"></div>
    <div class="bubbles bubble-2"></div>
    <div class="bubbles bubble-6"></div>
    <div class="bubbles bubble-3"></div>
    <div class="bubbles bubble-7"></div>
    <div class="bubbles bubble-4"></div>
    <div class="bubbles bubble-8"></div>


    <body>
        <div>
            <div class="backBtn-div">

                <button class="backBtn" onclick="history.back()">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </button>
            </div>
            <h1 class="pink">Personal</h1>
        </div>


        <div>
            <div class="card onshadow">

                <form id="myForm" method="post" action="@Url.Action("Edit", "UserTables")">
                    <input type="hidden" id="token" name="token" />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="input-container">
                        <h3>
                            Username
                            <star class="required" title="required">*</star>
                        </h3>

                        <input asp-for="ChipinName" required maxlength="50" />
                        <small>
                            <span asp-validation-for="ChipinName" class="text-danger"></span>
                        </small>
                        <h3>
                            Email
                            <star class="required" title="required">*</star>
                        </h3>
                        <input asp-for="UserEmail" required maxlength="25" type="email" />
                        <small>
                            <span asp-validation-for="UserEmail" class="text-danger"></span>
                        </small>
                    </div>
                    <div class="btn-div">
                        <button type="submit" value="Save"> Save</button>
                    </div>

                 
                </form>

            </div>



        </div>










    </body>




}




<script>
    document.getElementById("token").value = localStorage.getItem("token");
</script>

<script>
    $(document).ready(function () {
        $('header').empty();
    });
</script>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
