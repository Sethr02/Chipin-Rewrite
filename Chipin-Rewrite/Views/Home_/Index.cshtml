@model Chipin_Rewrite.Models.Entities.UserTable

@{
    ViewData["Title"] = "Index";
    var userTable = ViewBag.UserTable as List<Chipin_Rewrite.Models.Entities.UserTable>;
}

@using System.Security.Principal
@using Microsoft.AspNetCore.Authentication.OpenIdConnect
@using Microsoft.Extensions.Options
@using Microsoft.Identity.Web
@using System.Security.Claims;

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            height: 100%;
            margin: 0;
            padding: 0;
            background-color: #f5f5f5;
            font-family: Arial, sans-serif;
        }

        .dashboard-container {
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            padding: 20px;
            box-sizing: border-box;
            position: relative;
        }

        .dashboard-header {
            width: 100%;
            max-width: 400px;
            margin-bottom: -40px;
            background-color: white;
            padding: 15px;
            border-radius: 15px; /* Rounded edges */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); /* Shadow */
            display: flex;
            justify-content: space-between; /* Space between content */
            height: 175px
        }

            .dashboard-header img {
                max-width: 100px;
                margin-bottom: 10px;
            }

            .dashboard-header h2 {
                margin: 0;
                font-size: 3.5rem;
                font-weight: bold;
                color: #333;
            }

        .logout-button {
            background-color: #F74B94;
            color: white;
            border: none;
            border-radius: 15px;
            padding: 10px 20px;
            cursor: pointer;
            font-size: 1rem;
            transition: background-color 0.3s ease;
        }

            .logout-button:hover {
                background-color: #C93B77;
            }

        .main-card {
            width: 100%;
            max-width: 400px;
            text-align: center;
            flex-grow: 1;
        }

        .balance-card {
            background-color: #F74B94;
            color: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 0;
        }

            .balance-card p {
                margin: 0;
                font-size: 1.5rem;
            }

            .balance-card h2 {
                margin: 0 0 10px 0;
                font-size: 3rem;
            }

        .inner-card {
            background-color: white;
            border-radius: 15px;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 60px; /* Ensure space for footer to overlap */
            width: 100%;
            max-width: 400px;
            height: 621px;
            margin-top: -20px; /* To remove space between balance card and inner card */
            flex-grow: 1;
        }

        .menu-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            width: 100%;
        }

        .menu-item {
            background-color: white;
            border: 2px solid #00bfff; /* Change border color */
            border-radius: 10px;
            text-align: center;
            padding: 20px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: box-shadow 0.3s ease-in-out; /* Add smooth shadow transition */
        }

            .menu-item img {
                max-width: 50px;
                margin-bottom: 10px;
            }

            .menu-item p {
                margin: 0;
                font-size: 1.5rem;
                font-weight: bold;
                color: #333;
            }

            .menu-item:hover {
                box-shadow: 0 6px 12px rgba(0, 0, 0, 0.2); /* Shadow on hover */
            }

        .footer {
            background-color: #F74B94;
            color: white;
            text-align: center;
            padding: 10px;
            border-radius: 15px;
            width: 88%;
            max-width: 400px;
            position: absolute;
            bottom: 62px;
            left: 50%;
            transform: translateX(-50%);
        }

            .footer .social-icons {
                display: flex;
                justify-content: center;
                gap: 20px; /* Increase spacing */
                margin-top: 10px;
            }

                .footer .social-icons a {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    width: 40px;
                    height: 40px;
                    background-color: white;
                    border-radius: 50%;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                }

                .footer .social-icons img {
                    width: 20px;
                    height: 20px;
                }

            .footer .privacy-terms {
                margin-top: 10px;
                font-size: 0.9rem;
            }

                .footer .privacy-terms a {
                    color: white;
                    margin: 0 5px;
                    text-decoration: none;
                    font-size: 1.5rem;
                }
    </style>
</head>

@if (User.Identity.IsAuthenticated)
{
    <body>
        <div class="dashboard-container">
            <div class="dashboard-header">
                <div>
                    <img src="~/css/resource/chipin_logo_6.png" alt="Chipin Logo" class="img-fluid">
                    <h2>Hi, @userTable.FirstOrDefault().ChipinName</h2>
                </div>
                <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">
                    <button type="submit" class="logout-button">Logout</button>
                </a>
            </div>
            <div class="main-card">
                <div class="balance-card">
                    <p>Balance</p>
                    @foreach (var tokenWallet in Model.TokenWallets)
                    {
                        <h2>R @ViewData["Amount"]</h2>
                    }
                </div>
                <div class="inner-card">
                    <div class="menu-grid">
                        <a href="https://www.chipin.co.za/store-directory" target="_blank">
                            <div class="menu-item">
                                <img src="~/css/resource/shopping-cart-logo.png" alt="Shop now">
                                <p>Shop now</p>
                            </div>
                        </a>
                        <a href="@Url.Action("Index", "ProductListWallets", new { token = "null" })">
                            <div class="menu-item">
                                <img src="~/css/resource/to-do-list-logo.png" alt="My lists">
                                <p>My lists</p>
                            </div>
                        </a>
                        <a href="@Url.Action("Edit", "UserTables", new { token = "null" })">
                            <div class="menu-item">
                                <img src="~/css/resource/user-logo.png" alt="My account">
                                <p>My account</p>
                            </div>
                        </a>
                        <a href="@Url.Action("FAQs", "Home_")">
                            <div class="menu-item">
                                <img src="~/css/resource/information-logo.png" alt="FAQs">
                                <p>FAQs</p>
                            </div>
                        </a>
                    </div>
                </div>
                <div class="footer">
                    <div class="social-icons">
                        <a href="https://www.instagram.com/chipin_za/" target="_blank" title="Instagram">
                            <img class="instagram" src="~/css/resource/instagram_color_logo.svg" />
                        </a>
                        <a href="https://www.tiktok.com/&#64;chipin_za" target="_blank" title="TikTok">
                            <img class="tiktok" src="~/css/resource/tiktok_color_logo.svg" />
                        </a>
                        <a href="https://www.youtube.com/channel/UC0f2PM-jsOX4m4Af5dGD_Nw" target="_blank" title="YouTube">
                            <img class="youtube" src="~/css/resource/youtube_color_logo.svg" />
                        </a>
                        <a href="https://www.facebook.com/ChipInGifting" target="_blank" title="Facebook">
                            <img class="facebook" src="~/css/resource/facebook_color_logo.svg" />
                        </a>
                        <a href="https://www.linkedin.com/company/chipin-za/" target="_blank" title="Facebook">
                            <img class="linkedin" src="~/css/resource/linkedin_color_logo.svg" />
                        </a>
                    </div>
                    <div class="privacy-terms">
                        <a href="https://www.chipin.co.za/privacy-policy" target="_blank">Privacy</a> | <a href="https://www.chipin.co.za/terms-and-conditions" target="_blank">Terms & Conditions</a>
                        <p>&copy; Chipin 2024</p>
                    </div>
                </div>
            </div>
        </div>
    </body>
}

<script>
    $(document).ready(function () {
        $('header').empty();
        $('footer').hide();
    });
</script>

<script>
    function handleTokenAndRedirect() {
        if (performance.navigation.type === 1) {
            const token = localStorage.getItem('token');
            if (token) {

                const url = '/Home_/Index?token=' + encodeURIComponent(token);
                window.location.href = url;
            }
        }
    }

    // Call the function when the page loads
    handleTokenAndRedirect();

    document.getElementById('Products1').addEventListener('click', function () {

        var token = localStorage.getItem('token');
        var url = '@Url.Action("Index", "Products")' + '?token=' + encodeURIComponent(token);
        window.location.href = url;
    });
</script>
