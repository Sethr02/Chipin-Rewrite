@{
    ViewData["Title"] = "Index";
}

@{
    var externalProducts = ViewBag.ExternalProducts as List<Chipin_Rewrite.Models.Entities.ExternalProduct>;
    var products = ViewBag.Products as List<Chipin_Rewrite.Models.Entities.Product>;
    var productListItems = ViewBag.ProductListItems as List<Chipin_Rewrite.Models.Entities.ProductListItem>;
    var productListWallets = ViewBag.Wallets as Chipin_Rewrite.Models.Entities.ProductListWallet;
    var addresses = ViewBag.Addresses as List<Chipin_Rewrite.Models.Entities.Address>;

    // Calculate the progress percentage
    var progressPercentage = (productListWallets.Funded / productListWallets.Total) * 100;
    var hideProgressBar = productListWallets.Funded == 0;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dad's Bday</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            background-color: #F74B94;
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 428px;
            margin: 0 auto;
            padding: 0 0 70px 0;
            position: relative;
            min-height: 100vh;
        }

        .thank-you-container {
            text-align: center;
            padding: 20px;
        }

            .thank-you-container .logo {
                width: 220px; /* Adjust size as needed */
                margin-bottom: 20px;
            }

            .thank-you-container h1 {
                font-size: 24px;
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
            }

        .inner-card {
            border-radius: 15px;
            background-color: #fff;
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
            padding: 20px;
        }

            .inner-card h5 {
                font-size: 20px;
                font-weight: bold;
                color: #333;
                margin-bottom: 20px;
            }

        .amount-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 10px;
        }

            .amount-info div {
                text-align: center;
            }

            .amount-info span {
                font-size: 16px;
                color: #333;
            }

            .amount-info .chipped-in {
                color: #28a745;
                font-weight: bold;
            }

            .amount-info .remaining {
                color: #333;
                font-weight: bold;
            }

        .progress {
            height: 8px;
            border-radius: 5px;
            margin-bottom: 20px;
            background-color: #e9ecef;
        }

        .progress-bar {
            background-color: #28a745;
            width: @progressPercentage%;
        }

        .gift-image {
            display: flex;
            justify-content: left;
            margin-top: 20px;
        }

            .gift-image img {
                width: 60px;
                height: auto;
            }

        .btn-view, .btn-chip {
            width: 100%;
            border-radius: 30px;
            margin-top: 10px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50px; /* Adjust height as needed */
            background-color: #F74B94;
            color: #fff;
            border: none;
        }
    </style>
</head>
<body>

    <div class="thank-you-container">
        <img src="~/css/resource/chipin_logo_6.png" alt="Chipin Logo" class="logo">
        <h1>Thank you for Chipping In!</h1>

        <div>
            <div class="inner-card">
                <h5>@productListWallets.Name</h5>
                <div class="amount-info">
                    <div>
                        <span>Chipped in</span><br>
                        <span class="chipped-in">+ R @productListWallets.Funded</span>
                    </div>
                    <div>
                        <span>Remaining</span><br>
                        <span class="remaining">R @productListWallets.Total</span>
                    </div>
                </div>
                <div class="progress @(hideProgressBar ? "hide-progress-bar" : "")">
                    <div class="progress-bar" role="progressbar"></div>
                </div>
                <div class="gift-image">
                    @foreach (var (index, item) in productListItems.Select((item, index) => (index, item)))
                    {
                        @foreach (var eProduct in externalProducts)
                        {
                            if (@item.ExternalProductId == @eProduct.ExternalProductId)
                            {
                                <img src="@eProduct.Image" onerror="src ='/css/resource/Chipin.png';" />
                            }
                        }
                    }
                </div>
            </div>
        </div>

        <div class="mt-auto">
            <button class="btn btn-view" onclick="redirectToCreate()">Create Your Own Chip In List</button>
            <button class="btn btn-chip" onclick="redirectToClose()">Close</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<script>
    $(document).ready(function () {
        $('header').empty();
    });

    function redirectToCreate() {
        window.location.href = '@Url.Action("Create", "ProductListWallets")'; // Change this to the actual URL you want to redirect to
    }

    function redirectToClose() {
        window.location.href = '@Url.Action("Index", "Home_")'; // Change this to the actual URL you want to redirect to
    }
</script>