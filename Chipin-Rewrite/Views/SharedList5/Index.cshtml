<script>
    function getQueryParams(url) {
        let params = {};
        let parser = new URL(url);
        for (let pair of parser.searchParams.entries()) {
            params[pair[0]] = pair[1];
        }
        return params;
    }

    function constructBaseUrl(includeMessage = true) {
        const params = getQueryParams(window.location.href);
        const chipinAmt = params['chipinAmount'];
        const yourName = params['yourName'];
        const yourEmail = params['yourEmail'];

        let baseUrl = '@Url.Action("Index", "SharedList6")' + `?id=${@productListWallets.ProductListWalletId}`;

        if (chipinAmt) {
            baseUrl += `&chipinAmount=${encodeURIComponent(chipinAmt)}`;
        }

        if (yourName) {
            baseUrl += `&yourName=${encodeURIComponent(yourName)}`;
        }

        if (yourEmail) {
            baseUrl += `&yourEmail=${encodeURIComponent(yourEmail)}`;
        }

        if (includeMessage) {
            const personalMessage = document.getElementById('personalMessage').value;
            if (personalMessage) {
                baseUrl += `&personalMessage=${encodeURIComponent(personalMessage)}`;
            }
        }

        return baseUrl;
    }

    function populateFields() {
        const params = getQueryParams(window.location.href);
        console.log('Extracted URL params:', params);

        if (params['chipinAmount']) {
            document.getElementById('chipinAmount').textContent = params['chipinAmount'];
        }

        if (params['yourName']) {
            document.getElementById('yourName').textContent = params['yourName'];
        }

        if (params['yourEmail']) {
            document.getElementById('yourEmail').textContent = params['yourEmail'];
        }

        if (params['personalMessage']) {
            document.getElementById('personalMessage').textContent = params['personalMessage'];
        } else {
            document.getElementById('personalMessageSection').style.display = 'none';
        }
    }

    function redirectToSharedList6() {
        const url = constructBaseUrl(true);
        console.log("Redirecting to URL with message:", url);
        window.location.href = url;
    }

    // Populate fields on document ready
    $(document).ready(function () {
        populateFields();
        console.log('Current URL params:', getQueryParams(window.location.href));
    });
</script>