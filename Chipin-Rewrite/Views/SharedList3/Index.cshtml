                }

        .btn-chip {
            width: 100%;
            border-radius: 30px;
            margin-top: 10px;
            font-size: 16px;
            font-weight: bold;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 50px; /* Adjust height as needed */
