<body>

    <div class="container">
        <div class="header-container">
            <div class="header-content">
                <span class="back-arrow" onclick="history.back()">&lt;</span>
                <h1>@productListWallets.Name</h1>
            </div>
        </div>
        <div class="card">
            <div class="details-container">
                <h5>Your Details</h5>
                <div class="input-group">
                    <span class="input-icon"><i class="fa fa-user"></i></span>
                    <input id="yourNameInput" type="text" placeholder="Your Name" required>
                </div>
                <small class="required-text">required*</small>
                <div class="input-group">
                    <span class="input-icon"><i class="fa fa-envelope"></i></span>
                    <input id="yourEmailInput" type="email" placeholder="Your Email" required>
                </div>
                <small class="required-text">required*</small>
                <p class="email-disclaimer">E-mail Disclaimer</p>
                <div class="checkbox-container">
                    <input type="checkbox" id="anonymous" onclick="toggleInputs()">
                    <label for="anonymous">Chip in anonymously</label>
                </div>
            </div>
            <div class="mt-auto">
                <button class="btn btn-chip" onclick="redirectToSharedList4()">Next <img src="~/css/resource/arrow-next.svg" alt="Arrow"></button>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>

<script>
    // Track anonymous state
    let isAnonymous = false;

    $(document).ready(function () {
        $('header').empty();
    });

    function toggleInputs() {
        var anonymousCheckbox = document.getElementById("anonymous");
        var inputs = document.querySelectorAll(".details-container input[type='text'], .details-container input[type='email']");
        inputs.forEach(function (input) {
            input.disabled = anonymousCheckbox.checked;
            isAnonymous = true;
        });
    }

    function checkNextButton() {
        var anonymousCheckbox = document.getElementById("anonymous");
        var yourNameInput = document.getElementById('yourNameInput').value;
        var yourEmailInput = document.getElementById('yourEmailInput').value;

        var nextButton = document.getElementById('nextButton');
        if (anonymousCheckbox.checked || (yourNameInput && yourEmailInput)) {
            nextButton.disabled = false;
        } else {
            nextButton.disabled = true;
        }
    }

    function getQueryParams(url) {
        let params = {};
        let parser = new URL(url);
        for (let pair of parser.searchParams.entries()) {
            params[pair[0]] = pair[1];
        }
        return params;
    }

    function redirectToSharedList4() {
        const params = getQueryParams(window.location.href);
        const chipinAmt = params['chipinAmount'];
        const productListWalletsId = params['id'];

        var baseUrl = '@Url.Action("Index", "SharedList4")';
        var url = `${baseUrl}?id=@productListWallets.ProductListWalletId&chipinAmount=${chipinAmt}`;

        if (!document.getElementById("anonymous").checked) {
            var yourNameInput = document.getElementById('yourNameInput').value;
            var yourEmailInput = document.getElementById('yourEmailInput').value;
            url += `&yourName=${encodeURIComponent(yourNameInput)}&yourEmail=${encodeURIComponent(yourEmailInput)}`;
        }

        window.location.href = url;
    }

    // Add event listeners to inputs
    document.getElementById('yourNameInput').addEventListener('input', checkNextButton);
    document.getElementById('yourEmailInput').addEventListener('input', checkNextButton);
</script>