@model Chipin_Rewrite.Models.Entities.Product

@{
    ViewData["Title"] = "Create";
}


<!-- Main CSS-->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
<link href="~/css/site.css" rel="stylesheet" media="all">
<link href="~/css/Created.css" rel="stylesheet" media="all">







@if (User.Identity.IsAuthenticated)
{
 
    <link href="~/css/bubbles.css" rel="stylesheet" media="all">
    <div class="bubbles bubble-1"></div>
    <div class="bubbles bubble-5"></div>
    <div class="bubbles bubble-2"></div>
    <div class="bubbles bubble-6"></div>
    <div class="bubbles bubble-3"></div>
    <div class="bubbles bubble-7"></div>
    <div class="bubbles bubble-4"></div>
    <div class="bubbles bubble-8"></div>

    <body >
        <div>
            <div class="backBtn-div">

                <a href="@Url.Action("Index", "Products", new {token = "null"  })" class="backBtn link">
                    <i class="fa fa-arrow-left" aria-hidden="true"></i>
                </a>
            </div>
            <h1 class="pink">New Product</h1>

        </div>
        <div class="card onshadow">
            <form id="myForm" method="post" action="@Url.Action("Create", "Products")">
                <input type= "hidden"  id="token" name="token" />




                <div asp-validation-summary="ModelOnly" class="text-danger"></div>


                <div class="input-container">
                    <h3>
                        Product Name
                        <star class="required" title="required">*</star>
                    </h3>
                    <input asp-for="ProductName" class="form-control" placeholder="Address name..." required />
                    <small>
                        <span asp-validation-for="ProductName" class="text-danger"></span>
                    </small>
                    <h3>
                        Description
                        <star class="required" title="required">*</star>
                    </h3>

                    <input asp-for="ProductDescription" class="form-control" placeholder="Describe me..." required />

                    <small>
                        <span asp-validation-for="ProductDescription" class="text-danger"></span>
                    </small>

                    <h3>
                        Store
                        <star class="required" title="required">*</star>
                    </h3>
                    <input asp-for="Store" class="form-control" placeholder="Location" required />

                    <small>
                        <span asp-validation-for="Store" class="text-danger"></span>
                    </small>

                    <h3>
                        Quantity
                        <star class="required" title="required">*</star>
                    </h3>
                    <input asp-for="Quantity" class="form-control" type="number" min="0" step="1" placeholder="In stock" required />
                    <small>
                        <span asp-validation-for="Quantity" class="text-danger"></span>

                    </small>

                    <h3>
                        Price
                        <star class="required" title="required">*</star>
                    </h3>
                    <input asp-for="Price" class="form-control" type="number" min="0" placeholder="R?" required />
                    <small>
                        <span asp-validation-for="Price" class="text-danger"></span>

                    </small>
                    <h3>
                        Image
                        <star class="required" title="required">*</star>
                    </h3>
                    <input asp-for="ProductImage" placeholder="Image URL (required)" class="form-control" required />

                    <small>
                        <span asp-validation-for="ProductImage" class="text-danger"></span>
                    </small>

                    <input asp-for="ProductImage1" placeholder="Image URL" class="form-control" />

                    <small>
                        <span asp-validation-for="ProductImage1" class="text-danger"></span>
                    </small>

                    <input asp-for="ProductImage2" placeholder="Image URL" class="form-control" />

                    <small>
                        <span asp-validation-for="ProductImage2" class="text-danger"></span>
                    </small>

                    <input asp-for="ProductImage3" placeholder="Image URL" class="form-control" />

                    <small>
                        <span asp-validation-for="ProductImage3" class="text-danger"></span>
                    </small>

                </div>





                <div class="btn-div">
                    <button type="submit" class="createBtn" value="Create">Create</button>
                </div>


            </form>
        </div>

     


    </body>

    <script>
        document.getElementById("token").value = localStorage.getItem("token");
    </script>



    @section Scripts {
    @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }


}



