<script>
    function getQueryParams(url) {
        let params = {};
        let parser = new URL(url);
        for (let pair of parser.searchParams.entries()) {
            params[pair[0]] = pair[1];
        }
        return params;
    }

    function constructBaseUrl(includeMessage = true) {
        const params = getQueryParams(window.location.href);
        const chipinAmt = params['chipinAmount'];
        const yourName = params['yourName'];
        const yourEmail = params['yourEmail'];

        let baseUrl = '@Url.Action("Index", "SharedList5")' + `?id=${@productListWallets.ProductListWalletId}`;

        if (chipinAmt) {
            baseUrl += `&chipinAmount=${encodeURIComponent(chipinAmt)}`;
        }

        if (yourName) {
            baseUrl += `&yourName=${encodeURIComponent(yourName)}`;
        }

        if (yourEmail) {
            baseUrl += `&yourEmail=${encodeURIComponent(yourEmail)}`;
        }

        if (includeMessage) {
            const personalMessage = document.getElementById('personalMessage').value;
            if (personalMessage) {
                baseUrl += `&personalMessage=${encodeURIComponent(personalMessage)}`;
            }
        }

        return baseUrl;
    }

    function redirectWithMessage() {
        const url = constructBaseUrl(true);
        console.log("Redirecting to URL with message:", url);
        window.location.href = url;
    }

    function skipWithoutMessage() {
        const url = constructBaseUrl(false);
        console.log("Redirecting to URL without message:", url);
        window.location.href = url;
    }

    // Log the URL parameters on page load
    // Populate fields on document ready
    $(document).ready(function () {
        populateFields();
        console.log('Current URL params:', getQueryParams(window.location.href));
    });
</script>