          <div class="text-wrapper-3">https://chipin.co.za/chipin/69336JIWMTKAHXXC</div>
        </div>
        <a id="share" href="@Url.Action("Index", "ShareByEmail")">
            <div class="button-wrapper"><button class="button">Share by E-mail</button></div>
        </a>
        <div class="whatsapp-logo">  
